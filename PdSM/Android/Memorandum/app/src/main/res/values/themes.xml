<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Memorandum" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_500</item>
        <item name="colorPrimaryDark">@color/lime_dark</item>
        <item name="colorPrimaryVariant">@color/lime_light</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_400</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
<!--        <item name="colorSecondaryVariant">@color/green_light</item>-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Memorandum.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">2.5dp</item>
        <item name="android:elevation" tools:targetApi="lollipop" >0dp</item>
        <item name="tabIconTint">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabTextColor">@color/black_semi</item>
    </style>

    <style name="Theme.Memorandum.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Memorandum.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />
    <style name="Theme.Memorandum.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

    <style name="Theme.Memorandum.ChipText">
        <item name="android:textStyle">bold</item>
    </style>
</resources>